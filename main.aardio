// 显示进程执行信息
showProcessInfo = function(proc, cmd, isHideWnd, timeout=1000){
	var msg = string.format('命令执行%s！- %s', proc? '成功': '失败', cmd);
	mainForm.tray.pop(msg, "QLaunch消息", proc? 1: 3);
	if(isWriteLog) debug.logex.print(msg);

	if(proc && type(proc) == 'table'){
		// 显示执行结果
		if(!isHideWnd) {
			proc.waitOne(timeout);
			var outputStr = proc.readAll();
			showPopInfo(string.format('QLaunch - execmd: %s', cmd), outputStr);
		}else{
			proc.wait(timeout);
		}
	}
}

