// 判断文件是否存在
isPathExists = function(path){
	return ::Kernel32.GetFileAttributes(path) != -1;
}

// 加载命令，支持 !include 命令包含其他命令文件
loadCmds = function(){
	runTimes.load(runTimesFile);
	table.clear(listAllCmds);
	// 先加入内部命令列表
	for(i=1; #listInternalCmds; 1){
		addCmds(listInternalCmds[i], false);
	}
	var cmdFiles = {cmdFilePath};
	while(#cmdFiles != 0){
		readCmdFile(cmdFiles);
	}
	if(isWriteLog) debug.logex.print(string.format('共加载 %d 条命令', #listAllCmds));
}

// 读取命令配置文件，行首以分号或井号开头标示注释行
readCmdFile = function(cmdFiles){
	var cmdFile = string.trim(table.pop(cmdFiles));
	// 读入外部命令列表文件
	for line in io.lines(cmdFile){
		line = string.trim(line)
		if(string.len(line) > 0){
			if(string.startWith(line, '!include ')){
				var pathFile = string.replace(string.slice(line, 10), '\"', '');
				table.push(cmdFiles, pathFile);
			}else if(!string.startWith(line, ';') && !string.startWith(line, '#')){
				cmd = string.split(line, '\t');
				addCmds(cmd, false);
			}
		}
	}
}

// 添加命令，并将使用逗号分隔的别名复制成多个单条命令添加到指定命令列表
addCmds = function(cmd, isKvCmd){
	cmdkeys = string.split(cmd[1], ',');
	for(i=1; #cmdkeys; 1){
		cmd[1] = cmdkeys[i];
		addOneCmd(cmd, isKvCmd? listKvCmds: listAllCmds);
	}
}

/* 
 * 向指定列表添加单条命令
 * 命令表的数据：
 * 1 - 序号
 * 2 - 命令名称，key
 * 3 - 命令描述，disc
 * 4 - 执行指令
 * 5 - 命令名称 + 命令描述，用于匹配
 * 6 - 命令描述的拼音串，用于匹配
*/
addOneCmd = function(oneCmd, listCmds){
	if(!runTimes.find(oneCmd[1])){
		runTimes.set(oneCmd[1], 0);
	}
	var newCmd = table.clone(oneCmd);
	var strKey = string.lower(oneCmd[1]);
	var disc = string.lower(oneCmd[2]);
	var discPinYin = string.conv.pinyin(disc, "");
	table.push(newCmd, strKey + ' ' + disc);
	table.push(newCmd, (type(discPinYin) == "string"? discPinYin: ''));
	table.insert(newCmd, #listCmds + 1);
	table.push(listCmds, newCmd);
}

// 加载key-value配置文件，支持 !include 命令包含其他k-v文件
loadKvs = function(){
	table.clear(listKvCmds);
	var kvFiles = {kvFilePath};
	while(#kvFiles != 0){
		readKvFile(kvFiles);
	}
	if(isWriteLog) debug.logex.print(string.format('共加载 %d 条K-V项', #listKvCmds));
}

// 读取k-v配置文件，行首以分号或井号开头标示注释行
readKvFile = function(kvFiles){
	var kvFile = string.trim(table.pop(kvFiles));
	// 读入k-v列表文件
	for line in io.lines(kvFile){
		line = string.trim(line);
		if(string.len(line) > 0){
			if(string.startWith(line, '!include ')){
				var pathFile = string.trim(string.replace(string.slice(line, 10), '\"', ''));
				table.push(kvFiles, pathFile);
			}else if(!string.startWith(line, ';') && !string.startWith(line, '#')){
				kv = string.split(line, '\t');
				cmd = #kv > 2? {kv[1], kv[2], ":setclip " + kv[3]}: {kv[1], kv[2], ":setclip " + kv[2]};
				addCmds(cmd, true);
			}
		}
	}
}

/*
 * 匹配命令
 * 支持搜索：命令名称 + 命令描述、命令描述的拼音及k-v搜索
*/
matchCmds = function(text){
	table.clear(listMatchedCmds);
	var strKey, searchFieldId, listSrcCmds;
	if(string.startWith(text, ':es:')){ // everything搜索
		var cmd = table.clone(listInternalCmds[21]);
		var text = string.trim(string.slice(text, 5));
		cmd[2] = string.len(text) > 0? cmd[2] + ':' + text: '请输入Everything搜索内容';
		cmd[3] = string.len(text) > 0? cmd[3] + text: cmd[3];
		table.push(listMatchedCmds, cmd);
		table.insert(listMatchedCmds[1], 1);
	}else if(string.startWith(text, ':py:')){ // 拼音搜索
		strKey = string.lower(string.trim(string.slice(text, 5)));
		listSrcCmds = listAllCmds;
		searchFieldId = 6;
	}else if(string.startWith(text, ':kv:')){ // k-v搜索
		strKey = string.lower(string.trim(string.slice(text, 5)));
		listSrcCmds = listKvCmds;
		searchFieldId = 5;
	}else{
		strKey = string.lower(string.trim(text));
		listSrcCmds = listAllCmds;
		searchFieldId = 5;
	}
	if(#listMatchedCmds == 0 && string.len(strKey) > 0){
		for(i=1; #listSrcCmds; 1){
			if(string.indexOf(string.lower(listSrcCmds[i][searchFieldId]), strKey)){
				var cmd = table.slice(listSrcCmds[i], 2, 4);
				table.push(listMatchedCmds, cmd);
			}
		}
		sortCmds(listMatchedCmds);
		for(i=1; #listMatchedCmds; 1){
			table.insert(listMatchedCmds[i], i);
		}
	}
	firstItemNo = -1;
}

// 命令排序
sortCmds = function(cmds){
	table.sort(cmds, function(next){
		if(runTimes[owner[1]] !== null && runTimes[next[1]] !== null){
			if(tonumber(runTimes[owner[1]]) > tonumber(runTimes[next[1]])){
				return true;
			}elseif(tonumber(runTimes[owner[1]]) < tonumber(runTimes[next[1]])){
				return false;
			}else{
				return string.cmp(owner[1], next[1]) < 0;
			}
		}else{
			return string.cmp(owner[1], next[1]) < 0;
		}
	})	
}

getCurrentCmd = function(){
	return currSelected > 0? table.slice(listMatchedCmds[firstItemNo + currSelected - 1], 2, 4): null;
}

// 解析命令
parseCmd = function(cmd, cliptext){
	var isInternal = string.startWith(cmd[3], ':');
	var cmdStr = isInternal? string.slice(cmd[3], 2): cmd[3];
	
	if(string.indexOf(cmdStr, '%TOTALCMD%')) cmdStr = string.replace(cmdStr, '@%TOTALCMD%', totalCmdPath);
	if(string.indexOf(cmdStr, '%EVERYTHING%')) cmdStr = string.replace(cmdStr, '@%EVERYTHING%', everythingPath);
	if(string.indexOf(cmdStr, '%NIRCMD%')) cmdStr = string.replace(cmdStr, '@%NIRCMD%', nirCmdPath);
	if(string.indexOf(cmdStr, '%WINCTL%')) cmdStr = string.replace(cmdStr, '@%WINCTL%', winCtlPath);
	if(string.indexOf(cmdStr, '{%c}')){cliptext = !cliptext? win.clip.read(): cliptext; cmdStr = string.replace(cmdStr, '@{%c}', !cliptext? '': cliptext); };
	if(string.indexOf(cmdStr, '{%wd}')) cmdStr = string.replace(cmdStr, '@{%wd}', tostring(lastActiveHwnd));
	argv = string.cmdline(cmdStr);
	isHideWnd = string.startWith(argv[0], '@');
	cmdStr = isHideWnd? string.slice(argv[0], 2): argv[0];
	argv = table.slice(argv, 1);
	return cmdStr, argv, isInternal, isHideWnd;
}

// 执行命令
runCmd = function(cmd, cliptext){
	// 统计执行次数
	var index, strKey, count = runTimes.find(cmd[1]);
	runTimes.set(cmd[1], count + 1);

	// 记录日志
	if(isWriteLog) debug.logex.print("准备执行命令：" + string.join(cmd, '\t'));

	var cmdStr, argv, isInternal, isHideWnd = parseCmd(cmd, cliptext);
	if(isInternal){
		select(cmdStr) {
			case "quit" {
				mainForm.close();
			} case "reload" {
				loadCmds();
				loadKvs();
				mainForm.tray.pop('配置文件已重新加载！',"QLaunch消息");
			} case "setclip" {
				text = table.len(argv) == 1? argv[1]: string.args.join(argv);
				// replace 函数中在标示匹配模式时，尽量使用双引号或反引号，注意下面的写法
				text = string.replace(string.replace(text, `\%\\n\%`, '\n'), "\%\\t\%", '\t')
				win.clip.write(text);
				key.combine("SHIFT", "INSERT"); 
			} case "fileclip" {
				win.clip.write(string.load(string.args.join(argv)));
			} case "clearclip" {
				win.clip.write("");
			} case "showfile" {
				showPopInfo(string.load(string.args.join(argv)));
			} case "mdview" {
				showMdView(string.args.join(argv));
			} case "msgbox" {
				text = table.len(argv) == 1? argv[1]: string.args.join(argv);
				// replace 函数中在标示匹配模式时，尽量使用双引号或反引号，注意下面的写法
				text = string.replace(string.replace(text, `\%\\n\%`, '\n'), "\%\\t\%", '\t')
				showPopInfo("信息", text);
			} case "open" {
				processExecute(string.args.join(argv));
			} case "execmd" {
				processExeCmd(string.args.join(argv), isHideWnd);
			} case "exeps" {
				processExePs(argv[1], table.slice(argv, 2), isHideWnd);
			} case "encodeBase64" {
				showPopInfo("encodeBase64", crypt.bin.encodeBase64(win.clip.read()));
			} case "decodeBase64" {
				showPopInfo("decodeBase64", crypt.bin.decodeBase64(win.clip.read()));
			} case "urlEncode" {
				showPopInfo("urlEncode", inet.url.encode(win.clip.read()));
			} case "urlDecode" {
				showPopInfo("urlDecode", inet.url.decode(win.clip.read()));
			} case "2txt" {
				txt = win.clip.read()
				if(txt){
					win.clip.write(txt)
					key.combine("CTRL","V"); 
				}
			} case "formatJson" {
				win.clip.write(web.json.stringify(web.json.parse(win.clip.read()),true));
			}else{
				var errMsg = '未知的内部命令：' + cmd[1];
				mainForm.tray.pop(errMsg, "QLaunch消息", 3);
				if(isWriteLog) debug.logex.print(errMsg);
			}
		}
	}else{
		processExecute(cmdStr, string.args.join(argv), , !isHideWnd? 5: 0);
	}
}

// 设置开机启动
setAutoRun = function(auto){
	var appPath = io.fullpath("\QLaunch.exe");
	var startupKeyPath = "HKEY_CURRENT_USER\Software\Microsoft\Windows\CurrentVersion\Run";
	var reg = win.reg(startupKeyPath);
	if(auto){
		reg.setValue("QLaunch", appPath);
		// 记录日志
		if(isWriteLog) debug.logex.print("设置了开机启动项：" + appPath);
	}else{
		reg.delValue("QLaunch"); //删除指定的值
		// 记录日志
		if(isWriteLog) debug.logex.print("取消了开机启动项");
	}
	reg.close();
}

